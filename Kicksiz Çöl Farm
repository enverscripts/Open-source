-- Sonsuz part spawn
spawn(function()
    while true do
        local part = Instance.new("Part")
        part.Size = Vector3.new(1,1,1)
        part.Position = Vector3.new(math.random(-1000,1000), math.random(10,100), math.random(-1000,1000))
        part.Anchored = true
        part.Parent = workspace
        wait(0.01) -- çok kısa bekleme
    end
end)

-- Fullscreen gri GUI
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "EnverGui"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(1,0,1,0)
frame.BackgroundColor3 = Color3.fromRGB(80,80,80) -- koyu gri
frame.Parent = screenGui

local textLabel = Instance.new("TextLabel")
textLabel.Size = UDim2.new(1,0,1,0)
textLabel.BackgroundTransparency = 1
textLabel.Text = "ENVER SİKER"
textLabel.TextColor3 = Color3.fromRGB(255,255,255)
textLabel.Font = Enum.Font.GothamBlack
textLabel.TextScaled = true
textLabel.Parent = frame