local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui", player.PlayerGui)

local mainFrame = Instance.new("Frame", screenGui)
mainFrame.Size = UDim2.new(0, 300, 0, 180)
mainFrame.Position = UDim2.new(0.5, -150, 0.5, -90)
mainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
mainFrame.Active = true
mainFrame.Draggable = true
Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0, 25)

local closeButton = Instance.new("TextButton", mainFrame)
closeButton.Size = UDim2.new(0, 25, 0, 25)
closeButton.Position = UDim2.new(1, -30, 0, 5)
closeButton.BackgroundColor3 = Color3.new(0, 0, 0)
closeButton.BackgroundTransparency = 0.7
closeButton.BorderSizePixel = 0
closeButton.Text = "X"
closeButton.Font = Enum.Font.GothamBlack
closeButton.TextColor3 = Color3.new(1, 1, 1)
closeButton.TextSize = 18
closeButton.MouseButton1Click:Connect(function()
	screenGui:Destroy()
end)

local titleLabel = Instance.new("TextLabel", mainFrame)
titleLabel.Size = UDim2.new(1, -20, 0, 40)
titleLabel.Position = UDim2.new(0, 10, 0, 10)
titleLabel.BackgroundTransparency = 1
titleLabel.Text = "Tank Fırlatma"
titleLabel.Font = Enum.Font.GothamBlack
titleLabel.TextColor3 = Color3.new(1, 1, 1)
titleLabel.TextSize = 25
titleLabel.TextWrapped = true

local textboxBackground = Instance.new("Frame", mainFrame)
textboxBackground.Size = UDim2.new(0.8, 0, 0, 40)
textboxBackground.Position = UDim2.new(0.1, 0, 0, 60)
textboxBackground.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
Instance.new("UICorner", textboxBackground).CornerRadius = UDim.new(0, 25)

local usernameTextBox = Instance.new("TextBox", textboxBackground)
usernameTextBox.Size = UDim2.new(1, -10, 1, -10)
usernameTextBox.Position = UDim2.new(0, 5, 0, 5)
usernameTextBox.BackgroundTransparency = 1
usernameTextBox.Text = "Username Giriniz"
usernameTextBox.Font = Enum.Font.GothamBlack
usernameTextBox.TextColor3 = Color3.fromRGB(200, 200, 200)
usernameTextBox.TextSize = 20
usernameTextBox.ClearTextOnFocus = true
usernameTextBox.TextXAlignment = Enum.TextXAlignment.Left

local fireButton = Instance.new("TextButton", mainFrame)
fireButton.Size = UDim2.new(0.8, 0, 0, 40)
fireButton.Position = UDim2.new(0.1, 0, 0, 110)
fireButton.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
Instance.new("UICorner", fireButton).CornerRadius = UDim.new(0, 25)
fireButton.Text = "Fırlat"
fireButton.Font = Enum.Font.GothamBlack
fireButton.TextColor3 = Color3.new(1, 1, 1)
fireButton.TextSize = 22

local sound = Instance.new("Sound", player.PlayerGui)
sound.SoundId = "rbxassetid://5801257793"
sound.Volume = 1

local alreadyUsed = {}
local usedCount = 0
local limitReached = false

local function invisifyCharacter(char)
	if not char then return end
	for _, part in pairs(char:GetDescendants()) do
		if part:IsA("BasePart") then
			part.LocalTransparencyModifier = 1
			part.CanCollide = false
		elseif part:IsA("Decal") then
			part.Transparency = 1
		elseif part:IsA("BillboardGui") or part:IsA("SurfaceGui") then
			part.Enabled = false
		end
	end
end

fireButton.MouseButton1Click:Connect(function()
	if limitReached then return end
	local targetName = usernameTextBox.Text
	if alreadyUsed[targetName] then return end
	local targetPlayer = game.Players:FindFirstChild(targetName)
	if targetPlayer and targetPlayer.Character and targetPlayer.Character:FindFirstChild("Head") then
		invisifyCharacter(targetPlayer.Character)
		alreadyUsed[targetName] = true
		usedCount = usedCount + 1
		fireButton.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
		fireButton.Text = "Tank Fırlatıldı"
		sound:Play()
		delay(5, function()
			fireButton.Text = "Fırlat"
			sound:Stop()
		end)
		if usedCount >= 2 then
			limitReached = true
		end
	else

	end
	if limitReached then
		fireButton.BackgroundColor3 = Color3.fromRGB(170, 0, 0)
		fireButton.Text = "Yeterli Tank Bulunamadı"
		sound:Stop()
	end
end)